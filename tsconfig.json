{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "lib": ["dom", "es6"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "allowSyntheticDefaultImports": true,
  "strict": true,
  "alwaysStrict": true,
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts", "tests/**/*.spec.ts"],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs",
    "includeVersion": true
  }
}
